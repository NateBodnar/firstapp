<div class="box">
	<%= link_to (image_tag project.image(:medium)), project %>
	
	<p class="description">
		<strong>
			
				<%= project.title %>
			
		</strong>	
	</p>
		
	<p>
		<%= link_to project.user.name, user_show_path(:id => project.user_id),class: "btn btn-mini btn-primary" %>

	  <% if current_user == project.user %>
		  <%= link_to (content_tag :i, "", class: "icon-edit icon-2x"), edit_project_path(project) %> 
		  <%= link_to (content_tag :i, "", class: "icon-remove icon-2x"), project, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
</div>	
    