<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @project.image %>

			<p>
				<strong>
					<u>
						<%= @project.title %>
					</u>
				</strong>	
			</p>

			<p>
			  <%= @project.desvription %>
		  </p>

		  <p>
			  <%= link_to @project.user.name, user_show_path(:id => @project.user_id),class: "btn btn-mini btn-primary" %>
		  </p>
		  <% if current_user == @project.user %>
			  <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-mini btn-primary" %> 
			<% end %>  
				<%= link_to 'Back', projects_path, class: "btn btn-mini btn-primary" %>
		</div>
	</div>
</div>