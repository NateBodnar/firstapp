<div class="box">
	<%= link_to (image_tag project.image(:medium)), project %>
	
	<p class="description">
		<strong>
			<u>
				<%= project.title %>
			</u>
		</strong>	
	</p>
		
	<p>
			Posted by <%= project.user.name %>
	</p>

	<p>
	  <% if current_user == project.user %>
		  <%= link_to 'Edit', edit_project_path(project), class: "btn btn-mini btn-primary" %> 
		  <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-primary" %>
		<% end %>
	</p>
</div>